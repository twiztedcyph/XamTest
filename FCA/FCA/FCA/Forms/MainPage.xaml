<?xml version="1.0" encoding="utf-8" ?>
<Pel:FCAContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                    x:Class="FCA.Forms.MainPage" 
                    xmlns:Pel="clr-namespace:FCA.Forms">
    <StackLayout Spacing="10" Padding="10" x:Name="pnMain">
        <Button x:Name="btnForms" Text="Forms" Clicked="btnForms_Clicked"></Button>
        <Button x:Name="btnLearners" Text="Learners" IsVisible="False" />
        <Button x:Name="btnApplicants" Text="Applicants" IsVisible="False" Clicked="btnApplicants_Clicked" />
        <Button x:Name="btnCompanies" Text="Organisations" Clicked="btnCompanies_Clicked" />
        <Button x:Name="btnTools" Text="Tools" Clicked="btnTools_Clicked" />
        <Button x:Name="btnDebugOptions" Text ="Debug Options" Clicked="btnDebugOptions_Clicked" />
        <Label x:Name="lblVersion" Text="Version" VerticalOptions="End" />
        <Label x:Name="lblPICSVersion" Text="Version" VerticalOptions="End" />
    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sync" Order="Primary" x:Name="btnSync" Clicked="btnSync_Clicked"  Icon="sync.png"></ToolbarItem>
        <ToolbarItem Text="Help" Order="Primary" x:Name="btnHelp" Clicked="btnHelp_Clicked"  Icon="help.png"></ToolbarItem>
    </ContentPage.ToolbarItems>
</Pel:FCAContentPage>
